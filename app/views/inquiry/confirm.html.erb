<main id="barba-wrapper">
  <div class="barba-container">
    <div id="contact">
      <%= render 'index/header' %>
      <div class="wrapper">
        <h2 class="page-title">Contact</h2>
        <div class="newContent">
          <h1>お問い合わせ：確認</h1>
        </div>
        <div class="newContent">
          <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
            <div class="row">
              <div class="col-sm-4">名前</div>
              <div class="input1"><%= f.hidden_field :name %><%= @inquiry.name %></div>
              <div class="input">メールアドレス</div>
              <div class="input1"><%= f.hidden_field :email %><%= @inquiry.email %></div>
              <div class="input">お問い合わせ内容</div>
              <div class="textarea"><%= f.hidden_field :message %><%= simple_format(@inquiry.message) %></div>
            </div>
            <%= f.submit '送信する', class: 'button' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>